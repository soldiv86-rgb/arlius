-- Egg Enhancer - by Jandel (Short & Clean)
local TS = game:GetService("TweenService")
local UIS = game:GetService("UserInputService")
local Player = game.Players.LocalPlayer
local PG = Player:WaitForChild("PlayerGui")

local GUI = Instance.new("ScreenGui", PG)
GUI.Name = "JandelUI"
GUI.ResetOnSpawn = false
GUI.DisplayOrder = 999

-- Main Frame
local Frame = Instance.new("Frame", GUI)
Frame.Size = UDim2.fromScale(0.72, 0.68)
Frame.Position = UDim2.fromScale(0.5, 0.5)
Frame.AnchorPoint = Vector2.new(0.5, 0.5)
Frame.BackgroundColor3 = Color3.fromRGB(15,15,15)
Frame.Visible = false
Instance.new("UICorner", Frame).CornerRadius = UDim.new(0,18)
Instance.new("UIStroke", Frame).Color = Color3.fromRGB(80,80,80)

-- Title
local Title = Instance.new("TextLabel", Frame)
Title.Size = UDim2.fromScale(1, 0.14)
Title.BackgroundColor3 = Color3.fromRGB(20,20,20)
Title.Text = "Egg Enhancer - by Jandel"
Title.TextColor3 = Color3.new(1,1,1)
Title.Font = Enum.Font.GothamBold
Title.TextScaled = true
Title.TextXAlignment = Enum.TextXAlignment.Left
Instance.new("UIPadding", Title).PaddingLeft = UDim.new(0,18)
Instance.new("UICorner", Title).CornerRadius = UDim.new(0,18)

-- Close Button
local Close = Instance.new("TextButton", Title)
Close.Size = UDim2.fromScale(0.11, 0.7)
Close.Position = UDim2.fromScale(0.96, 0.15)
Close.AnchorPoint = Vector2.new(1,0)
Close.BackgroundColor3 = Color3.fromRGB(220,40,40)
Close.Text = "X"
Close.TextScaled = true
Instance.new("UICorner", Close).CornerRadius = UDim.new(0,12)

-- Tabs
local TabsFrame = Instance.new("Frame", Frame)
TabsFrame.Size = UDim2.fromScale(1, 0.11)
TabsFrame.Position = UDim2.fromScale(0, 0.14)
TabsFrame.BackgroundColor3 = Color3.fromRGB(25,25,25)
local Layout = Instance.new("UIListLayout", TabsFrame)
Layout.FillDirection = Enum.FillDirection.Horizontal
Layout.Padding = UDim.new(0,6)
Layout.HorizontalAlignment = Enum.HorizontalAlignment.Center

local Content = Instance.new("Frame", Frame)
Content.Size = UDim2.fromScale(0.94, 0.71)
Content.Position = UDim2.fromScale(0.03, 0.26)
Content.BackgroundTransparency = 1

local TabList = {"Fruit Name & Pet UUID", "Koi UUID", "Seal UUID"}
local Current

for i, name in ipairs(TabList) do
	local btn = Instance.new("TextButton", TabsFrame)
	btn.Size = UDim2.fromScale(0.31, 0.85)
	btn.BackgroundColor3 = Color3.fromRGB(40,40,40)
	btn.Text = name
	btn.TextScaled = true
	Instance.new("UICorner", btn).CornerRadius = UDim.new(0,12)
	
	local page = Instance.new("ScrollingFrame", Content)
	page.Size = UDim2.fromScale(1,1)
	page.BackgroundTransparency = 1
	page.Visible = false
	page.AutomaticCanvasSize = Enum.AutomaticSize.Y
	Instance.new("UIListLayout", page).Padding = UDim.new(0,15)
	
	btn.MouseButton1Click:Connect(function()
		if Current then Current.Visible = false end
		Current = page; page.Visible = true
		for _, b in pairs(TabsFrame:GetChildren()) do
			if b:IsA("TextButton") then b.BackgroundColor3 = Color3.fromRGB(40,40,40) end
		end
		btn.BackgroundColor3 = Color3.fromRGB(70,140,255)
	end)
	
	if i == 1 then btn.BackgroundColor3 = Color3.fromRGB(70,140,255); page.Visible = true; Current = page end
end

-- Draggable J Button (Black)
local J = Instance.new("TextButton", GUI)
J.Size = UDim2.fromOffset(60,60)
J.Position = UDim2.fromScale(0.05, 0.8)
J.BackgroundColor3 = Color3.new(0,0,0)
J.Text = "J"
J.TextColor3 = Color3.new(1,1,1)
J.Font = Enum.Font.GothamBold
J.TextScaled = true
Instance.new("UICorner", J).CornerRadius = UDim.new(0,30)

-- Drag J
local dragging, startPos, startInput
J.InputBegan:Connect(function(i) if i.UserInputType == Enum.UserInputType.MouseButton1 or i.UserInputType == Enum.UserInputType.Touch then
	dragging = true; startInput = i.Position; startPos = J.Position end end)
J.InputEnded:Connect(function(i) if i.UserInputType == Enum.UserInputType.MouseButton1 or i.UserInputType == Enum.UserInputType.Touch then dragging = false end end)
UIS.InputChanged:Connect(function(i)
	if dragging and (i.UserInputType == Enum.UserInputType.MouseMovement or i.UserInputType == Enum.UserInputType.Touch) then
		local delta = i.Position - startInput
		J.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
	end
end)

-- Toggle
local open = false
local function toggle()
	open = not open
	Frame.Visible = open
	if open then
		Frame.Position = UDim2.fromScale(0.5, -0.6)
		TS:Create(Frame, TweenInfo.new(0.4, Enum.EasingStyle.Quint), {Position = UDim2.fromScale(0.5, 0.5)}):Play()
	else
		TS:Create(Frame, TweenInfo.new(0.4, Enum.EasingStyle.Quint), {Position = UDim2.fromScale(0.5, -1)}):Play()
	end
end

J.MouseButton1Click:Connect(toggle)
Close.MouseButton1Click:Connect(toggle)

print("Jandel UI Loaded | Drag the black J button")
